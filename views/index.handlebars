<header class="text-center">
  <div class="jumbotron mainBanner">
    <h1>Eat Burgers, Live Forever!</h1>
  </div>
</header>
<main>

<div class="container">
  
  <div class="panel">
    
	<div class="row main">
      <div class="col-md-6">
        <h1>Ready to Live Forever!</h1>
          {{#each burgers}}
            {{#unless this.devoured}}
            <div class="row burgers">
              <div class="col-xs-8 burger">
                <h2>{{this.burger_name}}</h2>
              </div>
              <div class="col-1">
                <form action="burgers/update/devour/{{this.id}}?_method=PUT" method="POST">
                  <button class="btn btn-default btn-lg" type="submit">Eat It!</button>
                </form>
              </div>
            </div>
            <hr class="break">
            {{/unless}}
          {{/each}}
      </div>
      
	  <div class="col-md-6">
        <h1>Devoured Burgers</h1>
          {{#each burgers}}
            {{#if this.devoured}}
            <div class="row burgers">
              <div class="col-xs-8 burger">
                <h2>{{this.burger_name}}</h2>
              </div>
              <div class="col-1">
                <form action="burgers/delete/{{this.id}}?_method=DELETE" method="POST">
                  <button class="btn btn-danger btn-lg" type="submit">CLEAR!</button>
                </form>
              </div>
            </div>
            <hr class="break">
            {{/if}}
          {{/each}}
      </div>
    </div>
    
	<div class="row">
      <h1>Add a Burg</h1>
      <form class="form-inline" action="burgers/create" method="POST">
        <div class="form-group">
          <label for="ca"><h4>Burg Name:</h4></label>
          <input type="text" id="ca" name="name" class="form-control" required>
        </div>
        <button class="btn btn-success" type="submit"><i class="fa fa-plus" aria-hidden="true"></i>Add Burg</button>
      </form>
    </div>
  
  </div>



</main>
<footer>
</footer>



